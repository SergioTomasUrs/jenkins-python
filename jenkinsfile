pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Reemplazar con la URL de tu repositorio Git
                git 'https://github.com/SergioTomasUrs/jenkins-python.git'
            }
        }
        stage('Test') {
            steps {
                // Ejecutar pruebas unitarias
                sh 'python -m unittest test_app.py'
            }
        }
        stage('Build') {
            steps {
                // Paso de construcción simulado
                echo 'Construyendo la aplicación...'
                // Aquí podrías, por ejemplo, instalar dependencias, preparar entornos virtuales, etc.
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Deploy') {
            steps {
                // Simular un despliegue
                echo 'Desplegando la aplicación...'
                // Aquí irían los comandos reales de despliegue, si los hubiera
            }
        }
    }
}


